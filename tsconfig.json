{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["esnext", "dom"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "typeRoots": ["src/@types"]
  },
  "include": ["src/**/*"]
}
